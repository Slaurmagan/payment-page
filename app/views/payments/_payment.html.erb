<% _, header_partial = PaymentToHeaderTurboPartial.call(payment) %>
<% _, body_partial = PaymentToBodyTurboPartial.call(payment) %>

<div class="w-full  h-screen flex justify-center items-center md:bg-gray-100">
  <div
    class="
      bg-gradient-to-r from-cyan-500 to-blue-500 w-full h-screen md:h-auto flex
      flex-col md:bg-none md:flex-row md:grid md:grid-cols-[45%_55%] md:divide-x
      md:divide-gray-300 md:bg-white md:rounded-3xl md:py-8 md:min-h-[50%] md:w-auto
      md:min-w-[50%] md:max-w-[70%] overflow-scroll md:overflow-hidden
    "
  >
    <div class="flex-initial">
      <%= render(partial: header_partial, locals: local_assigns) %>
    </div>

    <div
      class="
        z-10 bg-white md:bg-inherit h-100 flex-1 rounded-t-3xl md:overflow-hidden
        md:rounded-none
      "
    >
      <%= render(partial: body_partial, locals: local_assigns) %>
    </div>
  </div>
</div>
