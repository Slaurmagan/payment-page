    "@uppy/core": "^4.3.1",
    "@uppy/dashboard": "^4.1.3",
    "@uppy/locales": "^4.4.0",
    "@uppy/xhr-upload": "^4.2.3",
    "clipboard": "^2.0.11",
    "node-fetch": "^3.3.2",
