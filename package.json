  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.12",
    "@rails/request.js": "^0.0.11",
    "@stimulus-components/clipboard": "^5.0.0",
    "node-fetch": "^3.3.2",
    "postcss-import": "^16.1.0"
  }
}
